<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetandroidbinome.Profil"
    android:background="@drawable/backgrounfacceuil">



<ImageView
    android:id="@+id/background"
    android:layout_width="415dp"
    android:layout_height="222dp"
    android:background="@drawable/backprofil"
    app:layout_constraintEnd_toEndOf="@id/imageView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imageView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="28dp"
    app:layout_constraintBottom_toBottomOf="@+id/background"
    app:layout_constraintEnd_toEndOf="parent"
    app:srcCompat="@drawable/imgprofil" />

    <Button
        android:id="@+id/fab"
        android:background="@drawable/changeimage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        android:layout_marginTop="20dp"/>

<ImageView
    android:id="@+id/edit"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="33dp"
    app:layout_constraintBottom_toTopOf="@+id/imageView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/background"
    app:srcCompat="@drawable/edit" />


    <TextView
        android:id="@+id/nomprenom"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="First name + Last name"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"

        />


<ImageView
    android:id="@+id/imgadresse"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/background"
    app:srcCompat="@drawable/adresse" />

<ImageView
    android:id="@+id/imgphone"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imgadresse"
    app:srcCompat="@drawable/phone" />

<ImageView
    android:id="@+id/imgemail"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imgphone"
    app:srcCompat="@drawable/email" />


<ImageView
    android:id="@+id/imgfacebook"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imgemail"
    app:srcCompat="@drawable/faceboock" />

<TextView
    android:id="@+id/txtadresse"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="65dp"
    android:layout_marginRight="60dp"
    android:gravity="left"
    android:text="27 rue Bizerte Korba, Nabeul"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView"
    app:srcCompat="@drawable/adresse">

</TextView>


<TextView
    android:id="@+id/txtphone"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginRight="60dp"
    android:gravity="left"
    android:text="+21653815179"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtadresse"
    app:srcCompat="@drawable/adresse">

</TextView>

<TextView
    android:id="@+id/txtemail"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginRight="60dp"
    android:text="firas.salem@esprit.tn"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtphone"
    app:srcCompat="@drawable/adresse">

</TextView>

<TextView
    android:id="@+id/txtfacebook"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="60dp"
    android:text="https://www.facebook.com/firas.salemm"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtemail"
    app:srcCompat="@drawable/adresse">


</TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:text="upload"
        android:id="@+id/fabUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

